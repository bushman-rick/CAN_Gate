<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_telemetry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simm.telemetryapp.TelemetrySim">


    <TextView
        android:text="@string/coord_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CoordinateX"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />
    <TextView
        android:text="@string/coord_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CoordinateY"
        android:textColor="@color/black"
        android:layout_below="@+id/CoordinateX"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />
    <TextView
        android:text="@string/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="7"
        android:id="@+id/HeadingText"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/TireImageFL"
        android:gravity="center" />
    <TextView
        android:text="@string/unavail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HeadingData"
        android:textColor="@color/black"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/HeadingText"
        android:gravity="center" />
    <ImageView
        android:src="@mipmap/tiretrack"
        android:layout_width="150px"
        android:layout_height="200px"
        android:id="@+id/TireImageFL"
        android:scaleType="center"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/CoordinateY"
        android:layout_alignParentStart="true" />
    <ImageView
        android:src="@mipmap/tiretrack"
        android:layout_width="150px"
        android:layout_height="200px"
        android:id="@+id/TireImageFR"
        android:scaleType="center"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="0dp"
        android:layout_below="@+id/CoordinateY" />
    <ImageView
        android:src="@mipmap/tiretrack"
        android:layout_width="150px"
        android:layout_height="300px"
        android:id="@+id/TireImageRR"
        android:scaleType="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp"
        android:paddingEnd="10dp"
        android:paddingStart="0dp"/>
    <ImageView
        android:src="@mipmap/tiretrack"
        android:layout_width="150px"
        android:layout_height="300px"
        android:id="@+id/TireImageRL"
        android:scaleType="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="50dp"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"/>
</RelativeLayout>